// ! extension de eslint para que sea mas estricto y para la disponibilidad de react en todo momento y control de variables declaradas pero no usadas en codigo

{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended"
    // "plugin:testing-library/jest-dom",
    // "plugin:jest-dom/recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }]
  }
}
